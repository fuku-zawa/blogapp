<div class="container">
    <ul>
        <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    <%# form_withでどのモデルを更新しようとしているかをmodelに指定（newアクションで生成される空のarticleを渡す）
    URLはroutes.rbのやつ、 %>
    <%= form_with(model:@article, url:articles_path, method:"post", local:true) do |f| %>
        <div>
            <%= f.label :title, "タイトル" %>
        </div>
        <div>
            <%= f.text_field :title, class:"text" %>
        </div> 
        <div>
            <%= f.label :content, "内容" %>
        </div>
        <div>
            <%= f.text_area :content %>
        </div>
        <%= f.submit "保存" , class:"btn-primary"%>
    <% end %>
</div>